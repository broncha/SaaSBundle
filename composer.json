{
    "name": "simpleweb/saas-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 bundle that makes it easier to build subscription-based SaaS products",
    "keywords": [ "simpleweb", "saas" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Steve Lacey",
            "email": "steve@simpleweb.co.uk"
        }
    ],
    "require": {
        "php": "~5.4",
        "lexik/currency-bundle": "~1.2",
        "symfony/framework-bundle": "~2.4",
        "symfony/form": "~2.4",
        "symfony/validator": "2.6.*@dev",
        "friendsofsymfony/user-bundle": "~2.0@dev",
        "doctrine/doctrine-bundle": "1.3.*@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7"
    },
    "suggests": {

    },
    "autoload": {
        "psr-4": { "Simpleweb\\SaaSBundle\\": "" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
